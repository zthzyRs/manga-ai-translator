# تطبيق ترجمة المانجا - متغيرات البيئة

# مستوى السجل
LOG_LEVEL=INFO

# نوع المعالج
DEVICE=cpu
# استخدم gpu إذا كان لديك GPU

# مسارات الملفات
DATA_PATH=./data
OUTPUT_PATH=./output
CONFIG_PATH=./config

# إعدادات النموذج
MODEL_NAME=manga-translator-v1
MODEL_PATH=./models
BATCH_SIZE=32
NUM_WORKERS=4

# إعدادات الترجمة
SOURCE_LANGUAGE=ja
TARGET_LANGUAGE=ar
CONFIDENCE_THRESHOLD=0.8

# إعدادات قاعدة البيانات (اختياري)
DATABASE_URL=postgresql://user:password@localhost/manga_translator

# إعدادات Redis (اختياري)
REDIS_URL=redis://localhost:6379/0

# إعدادات API (اختياري)
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=False

# إعدادات الأمان
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1

# إعدادات البريد الإلكتروني (اختياري)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-password

# إعدادات التخزين السحابي (اختياري)
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
AWS_REGION=us-east-1
S3_BUCKET=manga-translator

# إعدادات المراقبة (اختياري)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# إعدادات التطوير
DEBUG=False
TESTING=False

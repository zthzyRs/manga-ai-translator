# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# Python files
[*.py]
indent_style = space
indent_size = 4
max_line_length = 100
insert_final_newline = true
trim_trailing_whitespace = true

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# JSON files
[*.json]
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Toml files
[*.toml]
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# INI files
[*.ini]
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# Shell script files
[*.{sh,bash}]
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# Dockerfile
[Dockerfile]
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# Docker Compose files
[docker-compose*.yml]
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# Git files
[.git*]
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# Configuration files
[*.cfg]
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# Requirements files
[*requirements*.txt]
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# Ignore files
[.gitignore]
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# XML files
[*.xml]
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# HTML files
[*.html]
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# CSS files
[*.css]
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# JavaScript files
[*.js]
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
